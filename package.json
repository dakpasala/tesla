{
  "name": "tesla",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "src/apps/*",
    "packages/*"
  ],
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "react-native start",
    "test": "jest",
    "prepare": "husky",
    "postinstall": "husky install",
    "mobile:start": "yarn workspace mobile start",
    "mobile:android": "yarn workspace mobile android",
    "mobile:ios": "yarn workspace mobile ios",
    "server:dev": "yarn workspace server dev",
    "server:start": "yarn workspace server start"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{css,scss,md,json,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "lint-staged": "^16.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.82.0",
    "@react-native/eslint-config": "0.82.0",
    "@react-native/metro-config": "0.82.0",
    "@react-native/typescript-config": "0.82.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.1",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "husky": "^9.1.7",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
